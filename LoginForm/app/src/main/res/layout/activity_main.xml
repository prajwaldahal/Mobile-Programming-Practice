<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="32dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/name_txt"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:textSize="25dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="32dp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/email_txt"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:inputType="textWebEmailAddress"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:textSize="32dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/phone_txt"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:inputType="phone"
                    android:textSize="25dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textSize="32dp"
                    android:layout_marginBottom="10dp"/>

                <RadioGroup
                    android:id="@+id/radio_grp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <RadioButton
                        android:id="@+id/radiobtn_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="male"
                        android:textSize="25dp"
                        />
                    <RadioButton
                        android:id="@+id/radiobtn_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="25dp"
                        />
                </RadioGroup>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobbies:"
                    android:textSize="32dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/guitar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guitar"
                        android:textSize="25dp"
                        />
                    <CheckBox
                        android:id="@+id/football"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Football"
                        android:textSize="25dp"
                        />
                    <CheckBox
                        android:id="@+id/singing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Singing"
                        android:textSize="25dp"
                        />

                    <CheckBox
                        android:id="@+id/dancing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dancing"
                        android:textSize="25dp"
                        />
                    <CheckBox
                        android:id="@+id/cricket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cricket"
                        android:textSize="25dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District(Birth):"
                    android:textSize="32dp"
                    android:layout_marginBottom="10dp"/>

                <Spinner
                    android:id="@+id/select_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/District"
                    android:textSize="32dp" />

            </LinearLayout>
            <Button
                android:id="@+id/Submit"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textSize="25dp"
                android:layout_marginTop="25dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>